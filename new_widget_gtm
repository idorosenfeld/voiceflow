<script type="text/javascript">
  (function(d, t) {
      var v = d.createElement(t), s = d.getElementsByTagName(t)[0];
      v.onload = function() {
        window.voiceflow.chat.load({
          verify: { projectID: '67628fc3a5500434c7085873' },
          url: 'https://general-runtime.voiceflow.com',
          versionID: 'production',
          assistant: {
            stylesheet: 'https://www.anticancer.co.il/wp-content/themes/hello-theme-child-master/chat2.css'
          }
        }).then(() => {
          // ×”×¦'××˜ ××•×¡×ª×¨ ×‘×”×ª×—×œ×”
          window.voiceflow.chat.hide();

          // ××•×¦×’ ××—×¨×™ 7 ×©× ×™×•×ª
          setTimeout(() => {
            window.voiceflow.chat.show();
          }, 7000);
        });
      };
      v.src = "https://cdn.voiceflow.com/widget-next/bundle.mjs";
      v.type = "text/javascript";
      s.parentNode.insertBefore(v, s);
  })(document, 'script');
</script>

<!-- âœ… ×”××–× ×” ×œ××™×¨×•×¢×™× ××•×ª×××™× ××™×©×™×ª ×-Voiceflow -->
<script>
  window.addEventListener('message', (e) => {
    const data = e.data;

    // ××–×”×” ××ª ×”××™×¨×•×¢ ×©×”×’×“×¨×ª ×‘-Voiceflow
    if (data && data.type === 'voiceflow_event' && data.event === 'phone_number_submitted') {
      window.dataLayer = window.dataLayer || [];
      window.dataLayer.push({
        event: 'phone_number_submitted',
        phone: data.phone || '(not provided)'  // ×× ×™×© ××¡×¤×¨ â€“ × ×©×œ×— ××•×ª×•, ××—×¨×ª ×˜×§×¡×˜ ×›×œ×œ×™
      });
      console.log("ğŸ“ phone_number_submitted event pushed to dataLayer", data);
    }
  });
</script>
